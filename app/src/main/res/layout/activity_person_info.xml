<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorAccent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:title=" "
            app:navigationIcon="@drawable/ic_arrow_back_white">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="个人资料"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />

        </android.support.v7.widget.Toolbar>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_head"
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/titlebar"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            android:elevation="1dp"
            fresco:placeholderImage="@drawable/default_head"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="2dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_56"
        android:paddingLeft="@dimen/margin_18"
        android:paddingRight="@dimen/margin_18">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账号"
            android:textColor="@color/tv_color_primary_title"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_account"
            android:layout_alignBottom="@+id/tv_account"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:layout_toRightOf="@id/tv_account"
            android:paddingRight="12dp"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:text="15869117281"
            android:textColor="@color/tv_color_primary_hint"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

    <View
        style="@style/diver"
        android:layout_marginLeft="@dimen/margin_18"
        android:layout_marginRight="@dimen/margin_18"
        android:background="@color/color_diver" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_56"
        android:paddingLeft="@dimen/margin_18"
        android:paddingRight="@dimen/margin_18">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="@color/tv_color_primary_title"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:layout_toRightOf="@id/tv_name"
            android:drawableRight="@drawable/ic_to_right"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:text="哈哈哈哈"
            android:textColor="@color/tv_color_primary_hint"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

    <View
        style="@style/diver"
        android:layout_marginLeft="@dimen/margin_18"
        android:layout_marginRight="@dimen/margin_18"
        android:background="@color/color_diver" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_56"
        android:paddingLeft="@dimen/margin_18"
        android:paddingRight="@dimen/margin_18">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="@color/tv_color_primary_title"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/et_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_sex"
            android:layout_alignBottom="@+id/tv_sex"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:layout_toRightOf="@+id/tv_sex"
            android:drawableRight="@drawable/ic_to_right"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:textColor="@color/tv_color_primary_hint"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

    <View
    style="@style/diver"
    android:layout_marginLeft="@dimen/margin_18"
    android:layout_marginRight="@dimen/margin_18"
    android:background="@color/color_diver" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_56"
        android:paddingLeft="@dimen/margin_18"
        android:paddingRight="@dimen/margin_18">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="所在地"
            android:textColor="@color/tv_color_primary_title"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_common"
            android:layout_toEndOf="@+id/tv_address"
            android:background="@null"
            android:drawableRight="@drawable/ic_to_right"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:text="杭州"
            android:textColor="@color/tv_color_primary_hint"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

    <View
        style="@style/diver"
        android:layout_marginLeft="@dimen/margin_18"
        android:layout_marginRight="@dimen/margin_18"
        android:background="@color/color_diver" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_18"
        android:paddingRight="@dimen/margin_18">

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_common"
            android:text="个性签名"
            android:textColor="@color/tv_color_primary_title"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/et_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_common"
            android:layout_toEndOf="@+id/tv_intro"
            android:background="@null"
            android:drawableRight="@drawable/ic_to_right"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="end|center_vertical"
            android:layout_marginTop="@dimen/margin_big"
            android:text="教你你轻松打理冰箱教你你轻松打理冰箱"
            android:textColor="@color/tv_color_primary_hint"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

</LinearLayout>