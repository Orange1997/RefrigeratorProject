<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_empty"/>

    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_common"
        android:layout_marginRight="@dimen/margin_big"
        android:gravity="center_horizontal"
        android:text="@string/hint_create_refrigerator"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_18"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_refrigerator"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_smaller_corner_with_green_border"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/create_refrigerator"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_16"/>

        <TextView
            android:id="@+id/tv_join_refrigerator"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_smaller_corner_with_green_border"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginStart="@dimen/margin_big"
            android:text="@string/join_refrigerator"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_16"/>

    </LinearLayout>



</LinearLayout>