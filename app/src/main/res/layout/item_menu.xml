<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/head_height"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/iv_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_common"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_ice"/>

    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_16"
        android:layout_centerVertical="true"
        android:textColor="@color/tv_color_primary_title"
        android:layout_toEndOf="@id/iv_menu_icon"
        android:layout_marginLeft="@dimen/margin_common"
        android:text="11111"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_common"
        android:background="@drawable/ic_to_right"/>

    <View
       style="@style/diver"
        android:id="@+id/diver"
        android:layout_alignParentBottom="true"
        android:background="@color/color_diver"
        android:layout_marginRight="@dimen/margin_common"
        android:layout_marginLeft="@dimen/margin_common"/>

</RelativeLayout>