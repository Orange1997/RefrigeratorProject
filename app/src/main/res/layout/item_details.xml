<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_content"
    android:layout_marginBottom="@dimen/margin_big"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_common"
        fresco:viewAspectRatio="1.5"
        tools:background="@drawable/bg_high_priority"
        fresco:roundedCornerRadius="4dp"
        android:scaleType="centerCrop"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/bg_login" />

    <!--<ImageView-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignTop="@+id/img"-->
        <!--android:layout_alignBottom="@+id/img"-->
        <!--android:background="@drawable/shape_mash"-->
        <!--android:layout_marginLeft="@dimen/margin_common"-->
        <!--android:layout_marginRight="@dimen/margin_common"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:layout_alignTop="@+id/img"
        android:paddingLeft="@dimen/margin_common"
        android:paddingRight="@dimen/margin_big"
        android:layout_alignBottom="@+id/img"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:textSize="15sp"
            android:textColor="@color/tv_color_primary_title"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/text_13"
            android:includeFontPadding="false"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/gray_tv_hint"
            android:text="杭州潮生活"/>
    </LinearLayout>


</RelativeLayout>