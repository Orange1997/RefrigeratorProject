<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_content"
    android:layout_marginLeft="@dimen/margin_common"
    android:layout_marginRight="@dimen/margin_common"
    android:layout_marginBottom="@dimen/margin_18"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_recipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:viewAspectRatio="1.5"
        tools:background="@color/tv_color_primary_title"
        fresco:roundedCornerRadius="6dp"
        android:scaleType="centerCrop"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/bg_login" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_color_primary_title"
        android:textSize="@dimen/text_13"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/margin_tiny"
        android:text="麻婆豆腐麻婆豆腐"/>

    <TextView
        android:id="@+id/tv_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_tv_hint"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        android:text="200人已赞"/>


</LinearLayout>